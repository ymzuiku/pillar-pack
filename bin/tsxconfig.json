{
  "compilerOptions": {
    "module": "es2015",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "scripthost",
      "es5",
      "es6",
      "es2015",
      "es2015.promise",
      "es2015.proxy",
      "es2015.core",
      "es2015.symbol",
      "es2015.generator"
    ],
    "allowJs": true,
    "jsx": "react-native",
    "outDir": "",
    "watch": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.css",
    "**/*.png",
    "**/*.jpg",
    "**/*.svg",
    "**/*.html",
    "**/*.json",
    "**/*.md"
  ]
}
